<h1>Apartment <%= params[:id]%></h1>
<h3><a href="/apartments/<%= @apartment.id %>/edit">(edit)</a></h3>
<p>
  Address: <%= @apartment[:address] %>
</p>

<p>
  Monthly Rent: $<%= @apartment[:monthly_rent] %>
</p>

<p>
  Square feet: <%= @apartment[:sqft] %>
</p>

<p>
  Bedrooms: <%= @apartment[:num_beds] %>
</p>

<p>
  Bathrooms: <%= @apartment[:num_baths] %>
</p>

<h2>Tenants</h2>

<% if @tenants.size == 0 %>
None found
<% else %>
<ul>
  <% @tenants.each do |tenant| %>
  <li>
    <%= tenant[:name] %>, <%= tenant[:gender]%>, age <%= tenant[:age]%>
  </li>
  <% end %>
</ul>
<% end %>


